{
  "manifest_version": 3,
  "name": "YouTube Downloader",
  "version": "1.1",
  "description": "Download YouTube videos and other media using yt-dlp",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "http://localhost/*",
    "https://localhost/*"
    ],
  "action": {
    "default_popup": "bundle/index.html",
    "default_icon": "favicon.ico"
  },
  "background": {
    "scripts": ["serviceWorker.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "andrewtho5942_yt_dl@gmail.com"
    }
  }
}